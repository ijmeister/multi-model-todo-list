<div class="container">
  <h2>Add Todo Group</h2>
  <form action="/todogroups" method="POST">
    <div class="form-group">
      <label for="title">Name</label>
      <input type="text" class="form-control" id="nameInput" placeholder="e.g. Raymond" name="name">
    </div>
    <div class="form-group">
      <label for="description">Color</label>
      <%# <textarea class="form-control" id="descriptionInput" rows="3" placeholder="Description" name="description"></textarea>%>
      <input type="text" class="form-control" id="colorInput" placeholder="e.g #ba4a55" name="color">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
