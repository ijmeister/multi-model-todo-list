<div class="container">
  <h1 class="page-header">Todo Group Id:<%= todoGrpItem._id %></h1>

    <ul class="list-group">
      <li class="list-group-item">
        <h3><strong><%= todoGrpItem.name %>: </strong></h3>
        <h4 style="background-color: <%= todoGrpItem.color %>">color: <%= todoGrpItem.color %></h4>

        <a class="btn btn-warning" href=<%= "/todogroups/" + todoGrpItem._id + "/edit" %>>Edit</a>

        <form class="deleteForm "method="POST" action=<%= "/todogroups/" + todoGrpItem._id + "?_method=DELETE" %>>
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>

      </li>
    </ul>

</div>
