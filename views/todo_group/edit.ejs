<div class="container">
  <h1 class="page-header">Edit</h1>
  <form action=<%= "/todogroups/" + todoGrpItem._id + "?_method=PUT" %> method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" name="name" class="form-control" id="nameInput" value="<%= todoGrpItem.name %>">
    </div>
    <div class="form-group">
      <label for="color">Color</label>
      <input type="text" class="form-control" id="colorInput" placeholder="e.g #ba4a55" name="color" value="<%= todoGrpItem.color %>" />
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
